<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.haeckel.tournamentcreator.controller.popups.addplayer.AddPlayerController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Neuen Spieler erstellen" GridPane.columnSpan="2">
         <font>
            <Font size="20.0" />
         </font>
      </Text>
      <Label text="Vorname" GridPane.rowIndex="1" />
      <Label text="Nachname" GridPane.rowIndex="2" />
      <Label text="Handicapt" GridPane.rowIndex="3" />
      <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <buttons>
          <Button fx:id="abortButton" mnemonicParsing="false" onAction="#onAbortButtonPress" text="Abbrechen" />
            <Button fx:id="addPlayerButton" mnemonicParsing="false" onAction="#onAddPlayerButtonPress" text="Hinzufügen" />
        </buttons>
      </ButtonBar>
      <TextField fx:id="firstNameTextField" promptText="Timo" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="lastNameTextField" promptText="Häckel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="handicapTextField" promptText="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </children>
</GridPane>
